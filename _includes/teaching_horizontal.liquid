<div class="card-item col">
  <a href="{% if course.redirect %}{{ course.redirect }}{% else %}{{ course.url | relative_url }}{% endif %}">
    <div class="card hoverable">
      <div class="row g-0">
        {% if course.img %}
          <div class="card-img col-md-6">
            {% include figure.liquid loading="eager" path=course.img sizes="(min-width: 768px) 156px, 50vw" alt="course thumbnail" %}
          </div>
        {% endif %}
        <div class="{% if course.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title text-lowercase">{{ course.title }}</h3>
            <p class="card-text">{{ course.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if course.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ course.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
